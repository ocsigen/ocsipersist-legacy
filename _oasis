  FindlibName: dbm
  FindlibParent: ocsipersist
  Build$: flag(dbm)
  Path: src_dbm
  InternalModules: Ocsipersist
  BuildDepends: threads, ocsigenserver.baselib, ocsipersist, dbm, xml-light

